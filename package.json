{
    "author": "Unscrambl",
    "bin": {
        "browserDriverInstaller": "./index.js"
    },
    "dependencies": {
        "chai": "4.1.2",
        "chai-sinon": "2.8.1",
        "commander": "2.15.1",
        "mocha": "5.1.1",
        "shelljs": "0.8.1",
        "sinon": "5.0.2"
    },
    "description": "Installs Chrome and Gecko drivers that matches with the specified browser versions",
    "license": "Apache-2.0",
    "main": "index.js",
    "name": "browser-driver-installer",
    "repository": "github:unscrambl/browser-driver-installer",
    "scripts": {
        "install-chromedriver": "node ./index.js --browser-name chrome --browser-version $BROWSER_DRIVER_INSTALLER_CHROME_VERSION --target-path $BROWSER_DRIVER_INSTALLER_CHROMEDRIVER_PATH",
        "install-geckodriver": "node ./index.js --browser-name firefox --browser-version $BROWSER_DRIVER_INSTALLER_FIREFOX_VERSION --target-path $BROWSER_DRIVER_INSTALLER_GECKODRIVER_PATH",
        "postinstall": "npm run install-chromedriver && npm run install-geckodriver",
        "test": "node_modules/mocha/bin/mocha *.spec.js"
    },
    "version": "1.0.1"
}
